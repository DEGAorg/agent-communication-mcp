{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["*.ts", "types/*.d.ts"],
  "exclude": ["node_modules"]
} 